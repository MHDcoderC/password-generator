{
  "name": "password-generator-pwa",
  "version": "1.0.0",
  "private": false,
  "description": "سازنده پسورد امن - PWA استاتیک با Tailwind CSS و Vanilla JS",
  "license": "MIT",
  "scripts": {
    "dev": "http-server -c-1 -p 5173 .",
    "start": "npm run dev",
    "lint": "eslint . --ext .js",
    "format": "prettier --write \"**/*.{js,json,css,md,html}\"",
    "check": "npm run lint && prettier --check \"**/*.{js,json,css,md,html}\"",
    "dev:css": "tailwindcss -i ./src/input.css -o ./src/output.css --watch",
    "build:css": "tailwindcss -i ./src/input.css -o ./src/output.css --minify",
    "dev:all": "concurrently \"npm:dev\" \"npm:dev:css\""
  },
  "devDependencies": {
    "autoprefixer": "^10.4.20",
    "concurrently": "^8.2.2",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-promise": "^6.5.2",
    "http-server": "^14.1.1",
    "postcss": "^8.4.41",
    "prettier": "^3.3.3",
    "tailwindcss": "^3.4.17"
  }
}


